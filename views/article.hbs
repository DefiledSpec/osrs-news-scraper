<h3 class="title">{{article.title}}</h3>

<img src={{article.img}} alt="">

<p class="summary">{{ article.summary }}{{#if article.link }} <span><a href='{{ article.link }}'>Read More...</a></span>{{/if }}</p>

<h4 class="title">Comments:</h4>
<form id="commentForm" class="scroll">
	<h6>New Comment</h6>
	<hr><br>
	<label for="name" class="text-black">Username</label>
	<input class="input-field" id="name" name="name" type="text">
	<label for="comment">Add Comment</label>
	<input class="input-field validate" id="commentInput" name="comment" type="text" required>
	<button class="btn addComment green" type="submit" data-id={{article._id}}>Submit</button>
</form>

{{#unless article.comment }}
	<p>No comments yet!</p>
{{/unless }}
{{#each article.comment}}
	{{#unless this.deleted}}
	<div class="comment scroll">
		<span>{{this.name}}</span>
		<button data-id={{ this._id }} class="btn red del">X</button>
		<p>{{ this.body }}</p>
		<span><small>{{this.postedAt}}</small></span>
	</div>
	{{/unless }}
{{/each}}