<h2 class="title">Saved Articles</h2>
{{#unless articles }}
	<p class="white-text">No saved articles! <a href="/">Start saving!</a></p>
{{/unless }}
<div class="row">
	{{#each articles}}
		{{#if this.saved}}
		<div class="col m4 s10">
			<article class="osrsArticle card scroll-bg" >
				<div class="card-image">
					<img class="responsive-img" src="{{ this.img }}" alt="">
				</div>
				<div class="card-content">
					<span id={{ this._id }} class="card-title truncate">{{ this.title }}</span>
					<button data-id={{ this._id }} class="view btn blue">View</button>
					<button data-id={{ this._id }} class="delSave btn red">Remove Saved</button>
					<p>{{{ this.summary }}}</p>
					<p class="blue-text text-lighten-1">Comments: {{ this.commentLength }}</p>
				</div>
			</article>
		</div>
		{{/if }}
	{{/each }}
</div>